<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10061" id="net.ezrabibleapp.cordova" version="1.18.4" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EzraBibleApp</name>
    <description>
        Ezra Bible App is a Bible study tool focussing on topical study based on keywords/tags.
    </description>
    <author email="contact@ezrabibleapp.net" href="https://ezrabibleapp.net">EzraBibleApp.net</author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="sentry.io" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />
    <universal-links>
        <host name="app" scheme="ezrabible">
            <path event="launchedAppFromLink" url="*" />
        </host>
    </universal-links>
    <platform name="android">
        <hook src="hooks/update_build_gradle.js" type="before_build" />
        <hook src="hooks/deploy_app_sources.js" type="before_build" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/supports-screens">
            <supports-screens android:largeScreens="true" android:normalScreens="true" android:resizeableActivity="false" android:smallScreens="true" android:xlargeScreens="true" />
        </edit-config>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:requestLegacyExternalStorage="true" />
            <application android:usesCleartextTraffic="true" />
            <application android:resizeableActivity="false" />
            <application android:hasFragileUserData="true" />
        </edit-config>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:name='MainActivity']">
            <activity android:windowSoftInputMode="adjustResize" />
            <activity android:exported="true" />
            <activity android:theme="@style/Theme.App.SplashScreen" />
        </edit-config>
        <edit-config file="app/src/main/res/values/strings.xml" mode="merge" target="/resources/string[@name='app_name']">
            <string name="app_name">Ezra Bible App</string>
        </edit-config>
        <icon density="mdpi" src="ezra-bible-app/icons/android/mipmap-mdpi/ezra.png" />
        <icon density="hdpi" src="ezra-bible-app/icons/android/mipmap-hdpi/ezra.png" />
        <icon density="xhdpi" src="ezra-bible-app/icons/android/mipmap-xhdpi/ezra.png" />
        <icon density="xxhdpi" src="ezra-bible-app/icons/android/mipmap-xxhdpi/ezra.png" />
        <icon density="xxxhdpi" src="ezra-bible-app/icons/android/mipmap-xxxhdpi/ezra.png" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="resizeOnFullScreen" value="true" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="AndroidWindowSplashScreenIconBackgroundColor" value="#FFFFFF" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="ezra-bible-app/icons/ezra-android-launch.png" />
    </platform>
    <platform name="ios">
        <hook src="hooks/deploy_app_sources.js" type="before_prepare" />
        <preference name="deployment-target" value="13.0" />
        <preference name="resizeOnFullScreen" value="true" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <edit-config file="*-Info.plist" mode="merge" target="CFBundleDisplayName">
            <string>Ezra Bible App</string>
        </edit-config>
        <icon height="57" src="ezra-bible-app/icons/ios/icon/icon.png" width="57" />
        <icon height="114" src="ezra-bible-app/icons/ios/icon/icon@2x.png" width="114" />
        <icon height="20" src="ezra-bible-app/icons/ios/icon/icon-20.png" width="20" />
        <icon height="40" src="ezra-bible-app/icons/ios/icon/icon-20@2x.png" width="40" />
        <icon height="60" src="ezra-bible-app/icons/ios/icon/icon-20@3x.png" width="60" />
        <icon height="29" src="ezra-bible-app/icons/ios/icon/icon-29.png" width="29" />
        <icon height="58" src="ezra-bible-app/icons/ios/icon/icon-29@2x.png" width="58" />
        <icon height="87" src="ezra-bible-app/icons/ios/icon/icon-29@3x.png" width="87" />
        <icon height="48" src="ezra-bible-app/icons/ios/icon/icon-24@2x.png" width="48" />
