        <icon height="172" src="ezra-bible-app/icons/ios/icon/icon-86@2x.png" width="172" />
        <icon height="196" src="ezra-bible-app/icons/ios/icon/icon-98@2x.png" width="196" />
        <icon height="216" src="ezra-bible-app/icons/ios/icon/icon-108@2x.png" width="216" />
        <icon height="40" src="ezra-bible-app/icons/ios/icon/icon-40.png" width="40" />
